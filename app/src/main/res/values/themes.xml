<resources>
  <!-- Base application theme. -->
  <style name="Theme.DCYourself" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorBackground">@color/background_light</item>
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/green_500</item>
    <item name="colorPrimaryVariant">@color/green_200</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/green_200</item>
    <item name="colorSecondaryVariant">@color/aqua_200</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Navigation bar -->
    <item name="android:navigationBarColor">?attr/colorPrimary</item>
    <!-- Status bar color -->
    <item name="android:statusBarColor">@color/background_light</item>
  </style>

  <!-- Background Color -->

  <style name="BackgroundForm" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_form</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
  </style>

  <style name="BackgroundFormSecond" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_form_second</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
  </style>

  <style name="BackgroundBottomMenu" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_bottom</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:elevation">2dp</item>
    <item name="menu">@menu/bottom_menu</item>
    <item name="itemIconSize">40dp</item>
  </style>

  <style name="BackgroundButtonInfo" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_button_info</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">109dp</item>
  </style>

  <!-- Buttons -->

  <style name="ButtonPrimary" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_button_primary</item>
    <item name="fontFamily">@font/droid_sans_bold</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="ButtonSecondary" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_button_secondary</item>
    <item name="fontFamily">@font/droid_sans_bold</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textColor">?attr/colorSecondary</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="ButtonDisable" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_button_disable</item>
    <item name="fontFamily">@font/droid_sans_bold</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:textSize">20sp</item>
  </style>

  <!-- EditText -->

  <style name="BackgroundEdit" parent="Theme.DCYourself">
    <item name="android:background">@drawable/background_button_secondary</item>
    <item name="fontFamily">@font/droid_sans</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textColor">?attr/colorOnSecondary</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingStart">10dp</item>
    <item name="android:paddingEnd">10dp</item>
  </style>

  <!-- Logos -->

  <style name="PrincipalLogo" parent="Theme.AppCompat">
    <item name="srcCompat">@drawable/img_logo_principal</item>
    <item name="android:layout_width">200dp</item>
    <item name="android:layout_height">185dp</item>
    <item name="android:contentDescription">Logo de DCYourself</item>
  </style>

  <style name="SecondaryLogo" parent="Theme.AppCompat">
    <item name="srcCompat">@drawable/img_logo_secondary</item>
    <item name="android:layout_width">333dp</item>
    <item name="android:layout_height">96dp</item>
    <item name="android:contentDescription">Logo de DCYourself</item>
  </style>

  <style name="SecondaryLogoVariant" parent="Theme.AppCompat">
    <item name="srcCompat">@drawable/img_logo_secondary</item>
    <item name="android:layout_width">175dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:contentDescription">Logo de DCYourself</item>
  </style>

  <style name="Logo" parent="Theme.AppCompat">
    <item name="srcCompat">@drawable/img_logo</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">120dp</item>
    <item name="android:contentDescription">Logo de DCYourself</item>
  </style>

  <!-- Icons and Images -->

  <style name="EyeIcon" parent="Theme.DCYourself">
    <item name="android:src">@drawable/baseline_visibility_24</item>
    <item name="android:background">#00000000</item>
  </style>

  <!-- SplashScreen -->

  <style name="SplashTheme" parent="Theme.DCYourself">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>

  <!-- Picker Themes -->

  <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog">
    <item name="android:colorAccent">?attr/colorPrimary</item>
  </style>

  <!-- Animations -->
  <style name="SliderActivityAnimation" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
    <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
  </style>

  <!-- ProgressBar -->
  <style name="ProgressTheme" parent="Theme.DCYourself">
    <item name="progressColor">?attr/colorPrimary</item>
  </style>
</resources>