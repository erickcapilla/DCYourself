<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#7378DFDF"
  tools:context=".SignUp">

  <TextView
    android:id="@+id/my_label"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="200dp"
    android:background="@drawable/background_form"
    android:padding="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <ImageView
    android:id="@+id/imageView2"
    android:layout_width="333dp"
    android:layout_height="96dp"
    app:layout_constraintBottom_toTopOf="@+id/my_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.5"
    app:layout_constraintHorizontal_bias="0.5"
    app:srcCompat="@drawable/img_logo_secondary"
    android:contentDescription="Logo de la app"/>

  <TextView
    android:id="@+id/textSignUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/open_sans_bold"
    android:text="Registro"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textColor="@color/white"
    android:textSize="32sp"
    app:layout_constraintBottom_toTopOf="@+id/editName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.3" />

  <ImageView
    android:id="@+id/imageView3"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/editName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textSignUp"
    app:layout_constraintVertical_bias="0.5"
    app:srcCompat="@drawable/img_indicator_active" />

  <ImageView
    android:id="@+id/imageView4"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/editName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.6"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textSignUp"
    app:layout_constraintVertical_bias="0.5"
    app:srcCompat="@drawable/img_indicator_inactive" />

  <EditText
    android:id="@+id/editName"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/background_button_secondary"
    android:fontFamily="@font/droid_sans"
    android:hint="Nombre(s)"
    android:inputType="text|textPersonName|textCapWords"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:maxLength="50"
    app:layout_constraintBottom_toTopOf="@+id/editLastName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView4"
    app:layout_constraintVertical_bias="0.5"
    tools:ignore="RtlSymmetry" />

  <EditText
    android:id="@+id/editLastName"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/background_button_secondary"
    android:fontFamily="@font/droid_sans"
    android:hint="Apellido Paterno"
    android:inputType="text|textPersonName|textCapWords"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:maxLength="30"
    app:layout_constraintTop_toBottomOf="@+id/editName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/editLastName2"
    app:layout_constraintVertical_bias="0.5"
    tools:ignore="RtlSymmetry" />

  <EditText
    android:id="@+id/editLastName2"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/background_button_secondary"
    android:fontFamily="@font/droid_sans"
    android:hint="Apellido Materno"
    android:inputType="text|textPersonName|textCapWords"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:maxLength="30"
    app:layout_constraintBottom_toTopOf="@+id/go_back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editLastName"
    app:layout_constraintVertical_bias="0.5"
    tools:ignore="RtlSymmetry"/>

  <TextView
    android:id="@+id/error"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editLastName2"
    app:layout_constraintBottom_toTopOf="@+id/go_back"
    android:textAlignment="center"
    android:textColor="#FFF"
    android:fontFamily="@font/droid_sans_bold"
    android:textSize="10sp"
    android:text="Debes ingresar minimo 3 caracteres"
    android:visibility="gone"
    />

  <Button
    android:id="@+id/go_back"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/background_button_secondary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="AtrÃ¡s"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="#28A6A6"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.2"
    app:layout_constraintStart_toStartOf="parent" />


  <Button
    android:id="@+id/next"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/background_button_primary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Siguiente"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="@color/white"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.8"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>