<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#7378DFDF"
  tools:context=".ChangePassword">

  <TextView
    android:id="@+id/my_label"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="200dp"
    android:background="@drawable/form_background"
    android:padding="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <ImageView
    android:id="@+id/imageView2"
    android:layout_width="333dp"
    android:layout_height="96dp"
    app:layout_constraintBottom_toTopOf="@+id/my_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.5"
    app:layout_constraintHorizontal_bias="0.5"
    app:srcCompat="@drawable/logo_secundario"
    android:contentDescription="Logo de la app" />

  <TextView
    android:id="@+id/textTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:fontFamily="@font/open_sans_bold"
    android:text="Cambiar contraseña"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textColor="@color/white"
    android:textSize="32sp"
    app:layout_constraintBottom_toTopOf="@+id/editPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.3"  />

  <EditText
    android:id="@+id/editPassword"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/button_background_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:hint="Contraseña actual"
    android:inputType="textPassword"
    android:paddingStart="10dp"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/editNewPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textTitle"
    app:layout_constraintVertical_bias="0.5" />

  <ImageButton
    android:id="@+id/eyeButton"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:paddingHorizontal="10dp"
    android:layout_marginEnd="1dp"
    android:src="@drawable/baseline_visibility_24"
    android:background="#00000000"
    app:layout_constraintEnd_toEndOf="@+id/editPassword"
    app:layout_constraintBottom_toBottomOf="@+id/editPassword"
    app:layout_constraintTop_toTopOf="@+id/editPassword"/>

  <EditText
    android:id="@+id/editNewPassword"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/button_background_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:hint="Nueva contraseña"
    android:inputType="textPassword"
    android:paddingStart="10dp"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/editConfirmPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editPassword"
    app:layout_constraintVertical_bias="0.5" />

  <TextView
    android:id="@+id/errorPassword"
    android:layout_width="314dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    app:layout_constraintStart_toStartOf="@+id/editNewPassword"
    app:layout_constraintTop_toBottomOf="@+id/editNewPassword"
    android:textColor="#FFF"
    android:visibility="gone"
    android:fontFamily="@font/droid_sans_bold"
    android:textSize="10sp"
    android:text="Mínimo de 8 caracteres. Un número, una mayuscula y un caracter especial"
    />

  <ImageButton
    android:id="@+id/eyeButton2"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:paddingHorizontal="10dp"
    android:layout_marginEnd="1dp"
    android:src="@drawable/baseline_visibility_24"
    android:background="#00000000"
    app:layout_constraintEnd_toEndOf="@+id/editNewPassword"
    app:layout_constraintBottom_toBottomOf="@+id/editNewPassword"
    app:layout_constraintTop_toTopOf="@+id/editNewPassword"/>

  <EditText
    android:id="@+id/editConfirmPassword"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/button_background_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:hint="Confirmar contraseña"
    android:inputType="text|textPassword"
    android:paddingLeft="10dp"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/forgotPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editNewPassword"
    app:layout_constraintVertical_bias="0.5" />

  <TextView
    android:id="@+id/errorConfirmPassword"
    android:layout_width="314dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    app:layout_constraintStart_toStartOf="@+id/editConfirmPassword"
    app:layout_constraintTop_toBottomOf="@+id/editConfirmPassword"
    android:textColor="#FFF"
    android:fontFamily="@font/droid_sans_bold"
    android:textSize="10sp"
    android:visibility="gone"
    android:text="La contraseña debe coincidir"
    />

  <ImageButton
    android:id="@+id/eyeButton3"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:paddingHorizontal="10dp"
    android:layout_marginEnd="1dp"
    android:src="@drawable/baseline_visibility_24"
    android:background="#00000000"
    app:layout_constraintEnd_toEndOf="@+id/editConfirmPassword"
    app:layout_constraintBottom_toBottomOf="@+id/editConfirmPassword"
    app:layout_constraintTop_toTopOf="@+id/editConfirmPassword"/>

  <TextView
    android:id="@+id/forgotPassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/droid_sans"
    android:text="¿Olvidaste tu contraseña actual?"
    android:textColor="#FFFFFF"
    app:layout_constraintBottom_toTopOf="@+id/go_back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editConfirmPassword"
    app:layout_constraintVertical_bias="0.5" />

  <Button
    android:id="@+id/go_back"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_background_secondary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Atrás"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="#28A6A6"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.2"
    app:layout_constraintStart_toStartOf="parent" />


  <Button
    android:id="@+id/update"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_background_primary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Cambiar"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="@color/white"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.8"
    app:layout_constraintStart_toStartOf="parent" />

  <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView2"
    app:layout_constraintBottom_toTopOf="@+id/my_label"
    android:indeterminateTint="#155959"
    android:backgroundTint="@color/white"
    app:layout_constraintHorizontal_bias="0.25"
    android:visibility="gone"
    />

  <TextView
    android:id="@+id/progressTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Espera un momento..."
    android:textSize="16sp"
    android:textColor="#155959"
    android:fontFamily="@font/droid_sans_bold"
    app:layout_constraintStart_toEndOf="@+id/progressBar"
    app:layout_constraintTop_toTopOf="@+id/progressBar"
    app:layout_constraintBottom_toBottomOf="@+id/progressBar"
    app:layout_constraintHorizontal_bias="0.1"
    app:layout_constraintEnd_toEndOf="parent"
    android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>