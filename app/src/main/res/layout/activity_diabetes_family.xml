<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#7378DFDF"
  tools:context=".DiabetesFamily">

  <TextView
    android:id="@+id/my_label"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="330dp"
    android:background="@drawable/form_background"
    android:padding="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0" />

  <ImageView
    android:id="@+id/imageView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/my_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.3"
    app:srcCompat="@drawable/logo"
    android:contentDescription="Logo de la app"/>

  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/open_sans_bold"
    android:text="¿Tienes algún familiar con diabetes?"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textColor="#155959"
    android:textSize="24sp"
    app:layout_constraintBottom_toTopOf="@+id/my_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView4"
    app:layout_constraintVertical_bias="0.5" />

  <ImageView
    android:id="@+id/imageView5"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/noBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.2"
    app:srcCompat="@drawable/indicator_inactive" />

  <ImageView
    android:id="@+id/imageView6"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/noBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.2"
    app:srcCompat="@drawable/indicator_inactive" />

  <ImageView
    android:id="@+id/imageView7"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/noBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.2"
    app:srcCompat="@drawable/indicator_inactive" />

  <ImageView
    android:id="@+id/imageView8"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/noBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.7"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.2"
    app:srcCompat="@drawable/indicator_active" />

  <ImageView
    android:id="@+id/imageView9"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/noBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.9"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.2"
    app:srcCompat="@drawable/indicator_inactive" />


  <ImageButton
    android:id="@+id/noBtn"
    android:layout_width="100dp"
    android:layout_height="109dp"
    android:background="@drawable/button_background_info"
    app:layout_constraintBottom_toTopOf="@+id/editNumber"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/yesBtn"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.7"
    app:layout_constraintHorizontal_bias="0.5"
    app:srcCompat="@drawable/marca1" />

  <ImageButton
    android:id="@+id/yesBtn"
    android:layout_width="100dp"
    android:layout_height="109dp"
    android:background="@drawable/button_background_info"
    app:layout_constraintBottom_toTopOf="@+id/editNumber"
    app:layout_constraintStart_toEndOf="@+id/noBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.7"
    app:layout_constraintHorizontal_bias="0.5"
    app:srcCompat="@drawable/cheque1"  />

  <EditText
    android:id="@+id/editNumber"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginHorizontal="70dp"
    android:background="@drawable/button_background_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:hint="¿Cuántos?"
    android:inputType="number"
    android:paddingLeft="10dp"
    android:textSize="16sp"
    android:maxLength="2"
    app:layout_constraintBottom_toTopOf="@+id/go_back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.8" />

  <Button
    android:id="@+id/go_back"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_background_secondary"
    android:backgroundTint="@color/white"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Atrás"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="#28A6A6"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.2"
    app:layout_constraintStart_toStartOf="parent" />

  <Button
    android:id="@+id/next"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_background_primary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Siguiente"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="@color/white"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.8"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>