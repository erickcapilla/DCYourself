<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#7378DFDF"
  tools:context=".PersonalInformation">

  <ImageView
    android:id="@+id/imageView17"
    android:layout_width="175dp"
    android:layout_height="50dp"
    android:layout_marginTop="16dp"
    android:background="#00FFFFFF"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/img_logo_secondary" />

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="30dp"
    android:textColor="#155959"
    android:text="Información personal"
    android:fontFamily="@font/droid_sans_bold"
    android:textSize="24sp"
    android:textAlignment="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/imageView17"
    />

  <View
    android:id="@+id/background"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginVertical="30dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/background_form_second"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/goBack"
    app:layout_constraintTop_toBottomOf="@+id/title"
    />

  <EditText
    android:id="@+id/userName"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/background_button_secondary"
    android:ems="10"
    android:hint="Nombre(s)"
    android:fontFamily="@font/droid_sans"
    android:inputType="text|textPersonName|textCapWords"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:maxLength="50"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintTop_toTopOf="@+id/background"
    app:layout_constraintBottom_toTopOf="@+id/userLastName"/>

  <EditText
    android:id="@+id/userLastName"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/background_button_secondary"
    android:ems="10"
    android:hint="Apellido paterno"
    android:fontFamily="@font/droid_sans"
    android:inputType="text|textPersonName|textCapWords"
    android:paddingStart="10dp"
    android:maxLength="30"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintTop_toBottomOf="@+id/userName"
    app:layout_constraintBottom_toTopOf="@+id/userLastName2"/>

  <EditText
    android:id="@+id/userLastName2"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/background_button_secondary"
    android:ems="10"
    android:hint="Apellido materno"
    android:fontFamily="@font/droid_sans"
    android:inputType="text|textPersonName|textCapWords"
    android:paddingStart="10dp"
    android:maxLength="30"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintTop_toBottomOf="@+id/userLastName"
    app:layout_constraintBottom_toTopOf="@+id/calendar"/>

  <EditText
    android:id="@+id/calendar"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginStart="20dp"
    android:hint="Fecha de nacimiento"
    android:background="@drawable/background_button_secondary"
    android:fontFamily="@font/droid_sans"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:clickable="false"
    android:focusable="false"
    app:layout_constraintEnd_toStartOf="@+id/spinnerGender"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintTop_toBottomOf="@+id/userLastName2"
    app:layout_constraintBottom_toTopOf="@+id/weight"/>

  <Spinner
    android:id="@+id/spinnerGender"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/background_button_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:inputType="textCapSentences"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:clickable="false"
    android:focusable="false"
    app:layout_constraintBottom_toTopOf="@+id/height"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintStart_toEndOf="@+id/calendar"
    app:layout_constraintTop_toBottomOf="@+id/userLastName2" />

  <EditText
    android:id="@+id/weight"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginStart="20dp"
    android:hint="Peso"
    android:inputType="numberDecimal"
    android:background="@drawable/background_button_secondary"
    android:fontFamily="@font/droid_sans"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:maxLength="6"
    app:layout_constraintEnd_toStartOf="@+id/height"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintTop_toBottomOf="@+id/calendar"
    app:layout_constraintBottom_toTopOf="@+id/family"/>

  <EditText
    android:id="@+id/height"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/background_button_secondary"
    android:ems="10"
    android:hint="Estatura"
    android:fontFamily="@font/droid_sans"
    android:inputType="numberDecimal"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:maxLength="4"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintStart_toEndOf="@+id/weight"
    app:layout_constraintTop_toBottomOf="@+id/spinnerGender"
    app:layout_constraintBottom_toTopOf="@+id/exercise"
    />

  <EditText
    android:id="@+id/family"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginStart="20dp"
    android:hint="Familiares"
    android:background="@drawable/background_button_secondary"
    android:fontFamily="@font/droid_sans"
    android:paddingStart="10dp"
    android:textSize="16sp"
    android:inputType="number"
    android:maxLength="2"
    app:layout_constraintEnd_toStartOf="@+id/exercise"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintTop_toBottomOf="@+id/weight"
    app:layout_constraintBottom_toTopOf="@+id/next"/>

  <Spinner
    android:id="@+id/exercise"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/background_button_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:inputType="textCapSentences"
    android:paddingStart="10dp"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintStart_toEndOf="@+id/family"
    app:layout_constraintTop_toBottomOf="@+id/height"
    app:layout_constraintBottom_toTopOf="@+id/next"
    />

  <Button
    android:id="@+id/next"
    android:layout_width="0dp"
    android:layout_height="55dp"
    android:layout_marginVertical="30dp"
    android:layout_marginHorizontal="50dp"
    android:text="Actualizar"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:fontFamily="@font/droid_sans_bold"
    android:background="@drawable/background_button_primary"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintBottom_toBottomOf="@+id/background"/>

  <Button
    android:id="@+id/goBack"
    android:layout_width="0dp"
    android:layout_height="55dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="50dp"
    android:text="Atrás"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:fontFamily="@font/droid_sans_bold"
    android:background="@drawable/background_home"
    app:layout_constraintStart_toStartOf="@+id/background"
    app:layout_constraintEnd_toEndOf="@+id/background"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>