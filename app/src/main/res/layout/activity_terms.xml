<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#155959"
  tools:context=".Terms">

  <ImageView
    android:id="@+id/imageView17"
    android:layout_width="175dp"
    android:layout_height="50dp"
    android:layout_marginTop="16dp"
    android:background="#00FFFFFF"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/logo_secundario" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginVertical="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView17"
    app:layout_constraintBottom_toTopOf="@+id/next">
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Términos y Condiciones de DCYourself"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

      <TextView
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Bienvenido(a) a nuestra aplicación de autodiagnóstico de diabetes. Antes de utilizar esta aplicación, te pedimos que leas detenidamente los siguientes términos y condiciones. Al acceder o utilizar esta aplicación, aceptas cumplir con estos términos y condiciones. Si no estás de acuerdo con alguno de ellos, por favor, no utilices esta aplicación."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Propósito y Uso de la Aplicación"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toBottomOf="@+id/body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <TextView
        android:id="@+id/body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="La aplicación de autodiagnóstico de diabetes tiene como objetivo proporcionar información y recursos sobre la diabetes para el autodiagnóstico y la concientización general. No sustituye el diagnóstico médico profesional ni el asesoramiento médico personalizado. No se debe utilizar la aplicación como sustituto de una consulta médica o para tomar decisiones médicas sin el debido respaldo profesional. Si tienes alguna preocupación o sospecha de que puedes tener diabetes, te recomendamos que consultes a un médico u otro profesional de la salud cualificado."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Uso Responsable"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toBottomOf="@+id/body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <TextView
        android:id="@+id/body3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Debes utilizar la aplicación de forma responsable y respetar todas las leyes y regulaciones aplicables. No debes utilizar la aplicación de manera fraudulenta, difamatoria, ofensiva, ilegal o inapropiada. No puedes acceder a áreas restringidas de la aplicación sin autorización o intentar interferir con el funcionamiento normal de la misma."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Privacidad y Protección de Datos"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toBottomOf="@+id/body3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <TextView
        android:id="@+id/body4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Respetamos tu privacidad y nos comprometemos a proteger tus datos personales. Al utilizar la aplicación, aceptas nuestra política de privacidad que describe cómo recopilamos, utilizamos y protegemos tus datos. Te recomendamos que revises nuestra política de privacidad para obtener más información sobre cómo manejamos la información personal."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Propiedad Intelectual"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toBottomOf="@+id/body4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <TextView
        android:id="@+id/body5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="La aplicación y todo su contenido, incluyendo pero no limitado a texto, gráficos, logotipos, iconos, imágenes, clips de audio, compilaciones de datos y software, son propiedad exclusiva de los titulares de derechos correspondientes. Está prohibida la reproducción, distribución, modificación, venta o cualquier otro uso no autorizado del contenido sin el consentimiento expreso por escrito de los titulares de derechos."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/title6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Descargo de Responsabilidad"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toBottomOf="@+id/body5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <TextView
        android:id="@+id/body6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="La aplicación se proporciona tal cual y no ofrecemos ninguna garantía o representación, expresa o implícita, sobre su precisión, confiabilidad o adecuación para un propósito particular. No seremos responsables de ningún daño directo, indirecto, incidental, consecuente o punitivo derivado del uso de esta aplicación."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/title7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cambios en los Términos y Condiciones"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toBottomOf="@+id/body6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <TextView
        android:id="@+id/body7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Nos reservamos el derecho de modificar estos términos y condiciones en cualquier momento sin previo aviso. Se te notificará de los cambios a través de la aplicación o por otros medios adecuados. Si continúas utilizando la aplicación después de la modificación de los términos y condiciones, se considerará que has aceptado los cambios."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/title8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ley Aplicable y Jurisdicción"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_bold"
        app:layout_constraintTop_toBottomOf="@+id/body7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
      <TextView
        android:id="@+id/body8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Nos reservamos el derecho de modificar estos términos y condiciones en cualquier momento sin previo aviso. Se te notificará de los cambios a través de la aplicación o por otros medios adecuados. Si continúas utilizando la aplicación después de la modificación de los términos y condiciones, se considerará que has aceptado los cambios."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans"
        app:layout_constraintTop_toBottomOf="@+id/title8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
  <Button
    android:id="@+id/next"
    android:layout_width="256dp"
    android:layout_height="56dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/button_background_primary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Regresar"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="@color/white"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>