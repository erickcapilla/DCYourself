<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#7378DFDF"
  tools:context=".SignUp2">

  <TextView
    android:id="@+id/my_label"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="200dp"
    android:background="@drawable/form_background"
    android:padding="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <ImageView
    android:id="@+id/imageView2"
    android:layout_width="333dp"
    android:layout_height="96dp"
    app:layout_constraintBottom_toTopOf="@+id/my_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.5"
    app:layout_constraintHorizontal_bias="0.5"
    app:srcCompat="@drawable/logo_secundario"
    android:contentDescription="Logo de la app" />

  <TextView
    android:id="@+id/textSignUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/open_sans_bold"
    android:text="Registro"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textColor="@color/white"
    android:textSize="32sp"
    app:layout_constraintBottom_toTopOf="@+id/editEmail"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/my_label"
    app:layout_constraintVertical_bias="0.3"  />

  <ImageView
    android:id="@+id/imageView3"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/editEmail"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textSignUp"
    app:layout_constraintVertical_bias="0.5"
    app:srcCompat="@drawable/indicator_inactive" />

  <ImageView
    android:id="@+id/imageView4"
    android:layout_width="56dp"
    android:layout_height="7dp"
    app:layout_constraintBottom_toTopOf="@+id/editEmail"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.6"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textSignUp"
    app:layout_constraintVertical_bias="0.5"
    app:srcCompat="@drawable/indicator_active" />

  <EditText
    android:id="@+id/editEmail"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/button_background_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:hint="Correo electrónico"
    android:inputType="textEmailAddress"
    android:paddingStart="10dp"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/editPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView3"
    app:layout_constraintVertical_bias="0.5"
    tools:ignore="RtlSymmetry" />

  <EditText
    android:id="@+id/editPassword"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/button_background_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:hint="Contraseña"
    android:inputType="textPassword"
    android:paddingStart="10dp"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/editConfirmPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editEmail"
    app:layout_constraintVertical_bias="0.5"
    tools:ignore="RtlSymmetry" />

  <EditText
    android:id="@+id/editConfirmPassword"
    android:layout_width="314dp"
    android:layout_height="56dp"
    android:background="@drawable/button_background_secondary"
    android:ems="10"
    android:fontFamily="@font/droid_sans"
    android:hint="Confirmar contraseña"
    android:inputType="textPassword"
    android:paddingStart="10dp"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/accept"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editPassword"
    app:layout_constraintVertical_bias="0.5"
    tools:ignore="RtlSymmetry" />

  <CheckBox
    android:id="@+id/accept"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF"
    android:buttonTint="#FFFFFF"
    android:drawableTint="#FFFFFF"
    android:fontFamily="@font/droid_sans_bold"
    android:foregroundTint="#FFFFFF"
    android:text="Acepto términos y condiciones"
    android:textColor="#FFFFFF"
    app:layout_constraintBottom_toTopOf="@+id/go_back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editConfirmPassword"
    app:layout_constraintVertical_bias="0.5" />


  <Button
    android:id="@+id/go_back"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_background_secondary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Atrás"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="#28A6A6"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.2"
    app:layout_constraintStart_toStartOf="parent" />


  <Button
    android:id="@+id/signUp"
    android:layout_width="112dp"
    android:layout_height="56dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_background_primary"
    android:fontFamily="@font/droid_sans_bold"
    android:text="Siguiente"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="@color/white"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.8"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>